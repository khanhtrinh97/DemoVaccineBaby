<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTask">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/add_task_et_task_name"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:hint="Please input task name"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:textColor="#000"
                android:text="Choose type of time"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdo_seconds"
                        android:text="Seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rdo_minutes"
                        android:text="Minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rdo_hours"
                        android:text="Hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="16dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdo_days"
                        android:text="Days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rdo_months"
                        android:text="Months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rdo_years"
                        android:text="Years"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RadioGroup>
            <EditText
                android:id="@+id/add_task_et_num"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:hint="Please input a num"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="30dp"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="Ok"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:id="@+id/add_task_tv_ok"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:id="@+id/add_task_tv_cancel"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>