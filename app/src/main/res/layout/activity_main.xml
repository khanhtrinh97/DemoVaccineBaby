<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_ln_baby_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_background"
        android:orientation="horizontal"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_cim_ava"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baby_ava"
            app:civ_border_color="#000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/main_tv_baby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Name"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_tv_baby_yob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="baby Yob"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/main_lv_task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:id="@+id/main_tv_add_task"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_background"
        android:text="Add Task"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>